<Window x:Class="WpfManagerApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfManagerApp1"
        xmlns:uc="clr-namespace:WpfManagerApp1.Views.UserControls"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:WpfManagerApp1.ViewModel"
        xmlns:v="clr-namespace:WpfManagerApp1.Views.Windows"
        Title="{Binding Path=Title}" 
        MinHeight="600" MinWidth="1000"
        >
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Command="{Binding CloseApplicationCommand}"/>
            </MenuItem>
        </Menu>

        <TabControl>
            <TabItem Header="Все дела">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid
                            Grid.Column="0" 
                            >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label 
                            Grid.Column="0"
                            Grid.Row="0"
                            Content="Важные строчные"
                            />
                            <ListView
                                Grid.Row="1"
                                ItemsSource="{Binding ImportantImmediatelyWorksCollection}"
                                AllowDrop="True"
                                >
                                <!--Drop="WorkListView_Drop"-->

                                <!--<ListView.ItemContainerStyle>
                                    <Style>
                                        <EventSetter Event="work"/>
                                    </Style>
                                </ListView.ItemContainerStyle>-->

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                            </ListView>
                        </Grid>

                        <Grid 
                            Grid.Row="1"
                            Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label 
                            Grid.Column="0"
                            Grid.Row="0"
                            Content="Важные не строчные"
                            />
                            <ListView
                                Grid.Row="1"
                                ItemsSource="{Binding ImportantUnimmediatelyWorksCollection}"
                                >
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                            </ListView>
                        </Grid>

                        <Grid Grid.Row="0"
                              Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label 
                            Grid.Column="0"
                            Grid.Row="0"
                            Content="Не важные строчные"
                            />
                            <ListView
                                Grid.Row="1"
                                ItemsSource="{Binding UnimportantImmediatelyWorksCollection}"
                                >
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                            </ListView>
                        </Grid>

                        <Grid Grid.Row="1"
                              Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label 
                            Grid.Column="0"
                            Grid.Row="0"
                            Content="Не важные не строчные"
                            />
                            <ListView
                                Grid.Row="1"
                                ItemsSource="{Binding UnimportantUnimmediatelyWorksCollection}"
                                >
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                            </ListView>
                        </Grid>

                    </Grid>
                    <DockPanel
                        Grid.Column="1">
                        <Label
                            Content="Список дел"
                            DockPanel.Dock="Top"
                            />
                        <StackPanel
                            Height="25"
                            Orientation="Horizontal"
                            DockPanel.Dock="Bottom">
                            <Button
                                Content="Добавить задание"
                                Command="{Binding AddNewWorkCommand}"
                                />
                            <Button
                                Content="Удалить задание"
                                Command="{Binding DeleteSelectedWorkCommand}"
                                />
                        </StackPanel>
                        <uc:MainWorkList
                            x:Name="MainWorkList"
                            WorkDropCommand="{Binding WorkItemReceivedCommand}"
                            >
                        </uc:MainWorkList>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Планы по неделям">

            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
