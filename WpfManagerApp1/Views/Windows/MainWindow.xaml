<Window x:Class="WpfManagerApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfManagerApp1"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:WpfManagerApp1.ViewModel"
        Title="{Binding Path=Title}" 
        Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowVM/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Command="{Binding CloseApplicationCommand}"/>
            </MenuItem>
        </Menu>
        
        <TabControl>
            <TabItem Header="Все дела">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid
                            Grid.Column="0" 
                            >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label 
                            Grid.Column="0"
                            Grid.Row="0"
                            Content="Важные строчные"
                            />
                        <Label 
                            Grid.Column="1"
                            Grid.Row="0"
                            Content="Важные не строчные"
                            />
                        <Label 
                            Grid.Column="0"
                            Grid.Row="1"
                            Content="Не важные строчные"
                            />
                        <Label 
                            Grid.Column="1"
                            Grid.Row="1"
                            Content="Не важные не строчные"
                            />
                    </Grid>
                    <DockPanel
                        Grid.Column="1">
                        <Label
                            Content="Список дел"
                            DockPanel.Dock="Top"
                            />
                        <StackPanel
                            Height="25"
                            Orientation="Horizontal"
                            DockPanel.Dock="Bottom">
                            <Button
                                Content="Добавить задание"
                                />
                            <Button
                                Content="Удалить задание"
                                />
                        </StackPanel>
                        <ListView ItemsSource="{Binding WorksCollection}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}">Название</GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=Importance}">Важность</GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=Completeness}">Статус</GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Планы по неделям">
                
            </TabItem>
        </TabControl>
        
    </DockPanel>
</Window>
